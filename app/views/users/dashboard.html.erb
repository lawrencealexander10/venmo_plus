<%= render "header_DB" %>
<%= render "body_DB" %>	

<script type="text/javascript">
    $(window).load(function(){
        $('#myModal').modal('show');
    });
</script>


<!-- Set Collateral/Lending Funds Modal -->
<% if @account.collateral.nil? %>
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title" id="myModalLabel">Account Setup (Step 1 of 2)</h4>
	      </div>
	      <div class="modal-body">
	      	<h4>Set Collateral:</h4>
	      	<%= "Your balance is: #{current_user.account.balance}" %>

			<%= form_for(@account, method: 'put') do |f| %>
				<div class="form-group">
					<%= f.label :collateral %>
					<%= f.number_field :collateral %>
				</div>
				<div class="form-group">
					<%= f.label :lending %>
					<%= f.number_field :lending_funds %>
				</div>
	  	  </div>
	      <div class="modal-footer">
				<div class="form-group">
					<%= f.submit "Next", :class => "btn" %>
				</div>
			<% end %>
		  </div>
	    </div>
	  </div>
	</div>
<% end %>
