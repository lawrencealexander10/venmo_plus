<!-- Start of Profile dashboard div -->
<div class="container container_border">
  <div class="col-md-8">

    <div class="row">
      <div class = "col-md-4">
        <h2  class = "my_account">My Account</h2>
      </div>
    </div>



  <!-- Remaining Borrow Row -->
    <div class="row">
          <div class = "col-md-4">
            <h4 >Amount left to borrow: </h4>
          </div>
          <div class="col-md-1">
            <p> $ </p>
          </div>
    </div>

    <!-- Collateral Row -->
    <div class="row">
          <div class="col-md-4">
            <h4> Current collatoral:</h4>
          </div>
          <div class="col-md-1">
            <p> $ </p>
          </div>
          <div class="col-md-3">
            <p>  <%=link_to 'edit', '/accounts/update', :method => :get%></p>
          </div>
    </div>

    <!-- Lending Funds Row -->
    <div class="row">
          <div class="col-md-4">
            <h4>Current lending funds:</h4>
          </div>
          <div class="col-md-1">
            <p> $ </p>
          </div>
          <div class="col-md-3">
            <p>
            <%=link_to 'edit', '/accounts/update', :method => :get%></p>
          </div>
    </div>  
  </div>
    <!-- Credit Score Standing -->
        <div class="credit_score col-md-4">
        <h3>Credit Score:</h1>
        <h2>GREAT!</h2>
    </div>
</div>













<!-- Borrowing Div -->
<div class="container container_border">
            <h2>You are borrowing:</h2>
             <% if @transfers %>
        <% @transfers.each do |transfer| %>
          <li>
          <%= transfer.message.upcase %>
          $<%= transfer.amount %>
          Due On: <%= transfer.expiration_date.strftime("%m/%d/%Y") %>
          <%= link_to "Make Payment", edit_transfer_path( transfer), :method => :get %>
          </li>
        <% end %>
      <% end %>
              <%=link_to 'Borrow!', '/transfers/new', :class => "btn btn-primary btn-lg active", :method => :get%>
           <h3 class="make_payment_text">Your next payment is due:</h3>
         </div>








<!-- Payments Div -->
  <div class = "row">
    <div class="container container_border">
      <h2 class = "track">Track your payments:</h2>
       <div class="progress">
        <% percent = "40" %>
          <div class="progress-bar" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: <%= percent %>%;">
        <%= percent %>%
          </div>
      </div>
        <div class="row">
        




         </div>
         <div class ="row">
         <div class ="col-md-6">  
           <h4> Today </h4>
           
        </div>
    </div>  
    </div> 
 
</div>