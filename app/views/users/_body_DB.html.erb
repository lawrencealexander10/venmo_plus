<div class="container">


  <div class="row">
    <div class = "container">
        <div class = "col-md-2">
          <h2  class = "my_account">My Account:</h2>
          <img class = "img-thumbnail" src=<%=current_user.profile_pic%>> 
        </div>
        <br></br>
        <br></br>
        <div class = "col-md-2">
          <h4>Amount left to borrow: </h4>
        </div>     
          <p class = "col-md-2 money"> $x </p>
          <p class = "col-md-2 account_button"> <%=link_to 'Borrow!', '/transfers/new', :class => "btn btn-primary btn-lg active", :method => :get%></p>
        <div class = "row">
          <h4 class = "col-md-2 col-md-offset-2"> Current collatoral:</h4>
          <p class = "col-md-2 money"> $x </p>
          <p class = "col-md-2 account_button">  <%=link_to 'change collatoral', '/accounts/update', :class => "btn btn-primary btn-sm active pay date_payment_due", :method => :get%></p>
        </div>
        <div class = "row">
          <h4 class = "col-md-4 col-md-offset-2">Current lending funds:</h4>
          <p class = "col-md-2 money"> $x </p>
          <p class = "col-md-4 account_button">
          <%=link_to 'change lending amount', '/accounts/update', :class => "btn btn-primary btn-sm active pay date_payment_due", :method => :get%></p>
        </div>  
    </div>
  </div>
   <div class = "row">
    <div class="container">
    
        <div class="row">
          <div class="">
       
          </div>
        </div>
    </div>
  </div>
  <div class = "row">
    <div class="container down">
      <h2 class = "track">Track your payments:</h2>
       <div class="progress">
        <% percent = "40" %>
          <div class="progress-bar" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: <%= percent %>%;">
        <%= percent %>%
          </div>
      </div>
        <div class="row">
        <div class="container">
            <h2>You are borrowing:</h2>
            <% if @transfer %>
              <% @transfers.each do |transfer| %>
                 <li>
              <%= transfer.message.upcase && transfer.amount %>
              <%= link_to "Make Payment!", transfer_edit_path(:id => transfer), :method => :get %>
            </li>
              <% end %>
              <% end %>
              <%=link_to 'Borrow!', '/transfers/new', :class => "btn btn-primary btn-lg active", :method => :get%>
           <h3 class="make_payment_text">Your next payment is due:</h3>
         </div>
         </div>
         <div class ="row">
         <div class ="col-md-6">  
           <h4> Today </h4>
           
        </div>
    </div>  
    </div> 
 
</div>
