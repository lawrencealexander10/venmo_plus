<!-- Start of Profile dashboard div -->
<div class="container container_border">
  <div class="col-md-8">
    <div class="row">
      <div class = "col-md-4">
        <h2  class = "my_account">My Account</h2>
      </div>
    </div>
    <!-- Remaining Borrow Row -->
    <div class="row">
      <div class = "col-md-4">
        <h4 >Amount left to borrow: </h4>
      </div>
      <div class="col-md-1">
        <p> $<%= current_user.account.remaining_borrow.round(2)%> </p>
      </div>
    </div>
    <!-- Collateral Row -->
    <div class="row">
      <div class="col-md-4">
        <h4> Current collatoral:</h4>
      </div>
      <div class="col-md-1">
        <p> $<%= @collateral.round(2)%> </p>
      </div>
      <div class="col-md-3">
        <!-- Large modal -->
        <button class="btn btn-primary" data-toggle="modal" data-target=".collateral">Edit</button>
        <div class="modal fade collateral" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <%= form_for(@account, method: 'put') do |f| %>
              <div class="modal-body">
                <!-- Set Collateral Form -->
                <div id="collateral_form">
                  <h4>Set Desired Collateral:</h4>
                  <%= "Your balance is: #{current_user.account.balance}" %>
                  <div class="form-group">
                    <%= f.number_field :collateral, placeholder: "Collateral" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Submit", :class => "btn" %>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Lending Funds Row -->
    <div class="row">
      <div class="col-md-4">
        <h4>Current lending funds:</h4>
      </div>
      <div class="col-md-1">
        <p> $<%= current_user.account.lending_funds.round(2)%> </p>
      </div>
      <div class="col-md-3">
        <!-- Loan modal -->
        <button class="btn btn-primary" data-toggle="modal" data-target=".loan">Edit</button>
        <div class="modal fade loan" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <%= form_for(@account, method: 'put') do |f| %>
              <div class="modal-body">
                <!-- Set Collateral Form -->
                <div id="collateral_form">
                  <h4>Set Desired Collateral:</h4>
                  <%= "Your balance is: #{current_user.account.balance}" %>
                  <div class="form-group">
                    <%= f.number_field :collateral, placeholder: "Collateral" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Submit", :class => "btn" %>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Credit Score Standing -->
  <div class="credit_score col-md-4">
    <h3>Credit Standing:</h1>
    <h2>GREAT!</h2>
  </div>
</div>
<!-- Borrowing Div -->
<div class="container container_border">
  <h2>You are borrowing:</h2>
  <% if @transfers %>
  <table class="table table-striped table-bordered" border = "3">
    <tr>
      <th>Date Created</th>
      <th>Message</th>
      <th>Amount</th>
      <th>Due date</th>
      <th></th>
    </tr>
    <% @transfers.each do |transfer| %>
    <tr>
      <td><%= transfer.created_at.strftime("%m/%d/%Y") %></td>
      <td><%=transfer.message.upcase%></td>
      <td>$<%=transfer.amount%></td>
      <td><%=transfer.expiration_date.strftime("%m/%d/%Y")%></td>
      <td><%=link_to "Make Payment", edit_transfer_path( transfer), :method => :get %></td>
    </tr>
    <% end %>
  </table>
  <% end %>
  <%=link_to 'Borrow!', '/transfers/new', :class => "btn btn-primary btn-lg active", :method => :get%>
  
</div>
<!-- Payments Div -->
<div class = "row">
  <div class="container container_border">
    <h2 class = "track">Track your payments:</h2>
    <div class="progress">
      <% if current_user.account.collateral %>
      <% percent = (((current_user.account.remaining_borrow)/@collateral)*100).round(0) %>
      <% else %>
      <% percent = 100 %>
      <% end %>
      <div class="progress-bar" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: <%= percent %>%;">
        <%= percent %>%
      </div>
    </div>
  </div>
  
</div>