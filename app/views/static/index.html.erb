<%= render "/static/howto" %>

<!-- Put back into _header.html.erb later if necessary (login devise form) -->
  	<div class="LoginHeader">
		  			<%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
					<table>
				  <tbody>
				    <tr>
				      <td>
				        <%= f.email_field :email, placeholder: "Email", autofocus: true %>
				      </td>
				      <td>
				        <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
				      </td>
				      <td>
				        <%= f.submit "Sign in" %>
				      </td>
				    </tr>
				    <tr>
				      <td>
				        <% if devise_mapping.rememberable? -%>
				            <div>
				              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
				            </div>
				        <% end -%>      
				      </td>
				      <td>
				        <%- if devise_mapping.recoverable? && controller_name != 'passwords' &&   controller_name != 'registrations' %>
				              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
				          <% end -%>
				      </td>
				    </tr>
				  </tbody>
				  </table>
				  	<% end -%>
	</div>